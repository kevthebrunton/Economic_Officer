<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/mainLayout">

    <!-- Include other widget or layout tags here. These are considered
            "child views" or "children" of the linear layout -->

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="#6e73f6"
            android:padding="8dp">


            <TextView
                android:id="@+id/display_expense_type1"
                android:layout_width="118dp"
                android:layout_height="20dp"
                android:layout_marginTop="12dp"
                android:fontFamily="monospace"
                android:text="expense type"
                android:textColor="#000000"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.153"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.112" />

            <TextView
                android:id="@+id/display_expense_date1"
                android:layout_width="117dp"
                android:layout_height="19dp"
                android:layout_marginEnd="204dp"
                android:text="time"
                android:textColor="#000000"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.3"
                app:layout_constraintStart_toEndOf="@+id/display_expense_id1"
                app:layout_constraintTop_toBottomOf="@+id/display_expense_type1"
                app:layout_constraintVertical_bias="0.033" />

            <TextView
                android:id="@+id/display_expense_store1"
                android:layout_width="122dp"
                android:layout_height="19dp"
                android:layout_marginEnd="228dp"
                android:layout_marginBottom="2dp"
                android:fontFamily="monospace"
                android:text="Store Name"
                android:textColor="#000000"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.72"
                app:layout_constraintStart_toEndOf="@+id/display_expense_id1"
                app:layout_constraintTop_toBottomOf="@+id/display_expense_date1"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/display_expense_amount1"
                android:layout_width="91dp"
                android:layout_height="27dp"
                android:text="Amount"
                android:textColor="#000000"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.893"
                app:layout_constraintStart_toEndOf="@+id/display_expense_date1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.283" />

            <TextView
                android:id="@+id/display_expense_id1"
                android:layout_width="28dp"
                android:layout_height="39dp"
                android:layout_marginStart="4dp"
                android:fontFamily="@font/nobile_bold"
                android:text="Id No"
                android:textColor="#000000"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>